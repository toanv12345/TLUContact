<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionBarSize">12dp</item>
        <!-- Adjust position with padding/margins -->
        <item name="android:contentInsetStart">16dp</item>
        <item name="android:paddingTop">0dp</item>       <!-- Adjust vertical position -->
        <item name="android:paddingBottom">4dp</item>
        <!-- Title text styling -->
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <!-- Title text style for the action bar -->
    <style name="MyActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for buttons in the app -->
    <style name="Widget.TLUContact.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for input fields -->
    <style name="Widget.TLUContact.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>